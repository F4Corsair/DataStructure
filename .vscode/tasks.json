{
    "tasks": [
        {
            "label": "compile",
            "type": "cppbuild",
            "command": "gcc",
            "args": [
                "-g",
                "-c",
                "${fileDirname}\\*.c",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$gcc",
        },
        {
            "label": "link",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${fileDirname}\\*.o",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}",
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$gcc",
        },
        {
            "label": "execute",
            "type": "shell",
            "command":"./${fileBasenameNoExtension}.exe",
            "args": [
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "Build",
            "dependsOrder": "sequence",
            "dependsOn": ["compile", "link","execute"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build before Launch",
            "dependsOrder": "sequence",
            "dependsOn": ["compile", "link"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
        }
